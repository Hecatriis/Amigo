{% extends 'base.html.twig' %}

{% block title %}Amigo - détail du membre{% endblock %}

{% block body %}
    <h1 class="table-titre">Détail du membre du bureau</h1>

    <table class="crud-table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ bureau.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ bureau.prenom }}</td>
            </tr>
            <tr>
                <th>Pole</th>
                <td>{{ bureau.Pole }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ bureau.Role }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ bureau.dateDebut ? bureau.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('_ADMIN/bureau_admin/_delete_form.html.twig') }}

    <p style="max-width: 200px; max-height: 175px; margin: 2rem auto"><img src="{{ vich_uploader_asset(bureau, 'fichier') }}" style="width: 100px; height: 150px; margin: auto;" /></p>

{% endblock %}
